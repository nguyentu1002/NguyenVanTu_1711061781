@using Microsoft.AspNet.Identity


@using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
@Html.AntiForgeryToken()

<ul class="nav navbar-nav navbar-right">
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@User.Identity.GetUserName() <span class="caret"></span></a>
        <ul class="dropdown-menu">
            <li class="dropdown-item"><a href="@Url.Action("Mine", "Courses")">My Upcoming Course</a></li>
            <li class="dropdown-item"><a href="@Url.Action("Attending", "Courses")">Course I'm going</a></li>
            <li class="dropdown-item"><a href="@Url.Action("Following", "Courses")">Lecture I'm following</a></li>
            <li role="separator" class="divider"></li>
            <li class="dropdown-item"><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
        </ul>
    </li>
</ul>
    }